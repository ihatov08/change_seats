<% if flash[:notice] %>
<div class="alert alert-danger">
<p><%= notice %></p>
</div>
<% end %>


<div class="seats_index">
<h1>Sparta Camp in Hachimantai Member Lists<%= link_to 'Mix now!!', randam_path, class: "btn btn-warning" %><%= link_to 'Registration', new_seat_path, class: "btn btn-default" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seats.each_with_index do |seat, i| %>
      <tr>
        <td><%= "#{i + 1}" %></td>
        <td><%= seat.name %></td>
        <td><%= link_to 'Show', seat, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Mix now!!', randam_path, class: "btn btn-warning" %>
<%= link_to 'Registration', new_seat_path, class: "btn btn-default" %>
</div>